html {
  height: 100%;
}

body {
  height: 100%;
}

#app {
  height: 100%;
}

.theme-container {
  min-height: 100%;

  &:not(.no-sidebar) {
    background-color: white;
  }

  .sidebar-button {
    color: white;
  }
}

a {
  color: $uberBlue;
}

a.term {
  color: inherit;
  cursor: help;
  font-style: italic;
  text-decoration-color: $uberBlue;
  text-decoration-line: underline;
  text-decoration-style: dashed;
  text-underline-position: under;

  &:hover {
    color: $uberBlue;
    text-decoration-color: $uberBlue;
    text-decoration-line: underline;
    text-decoration-style: dashed !important;
  }
}

dt.defined-term {
  color: $uberBlue !important;
}

.go-to-top {
  color: $uberBlue !important;
}

.text-align-center {
  text-align: center;
}